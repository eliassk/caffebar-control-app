# Home Assistant (same LAN as VM)
HA_BASE_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token

# Server
PORT=3001
NODE_ENV=production

# CORS: comma-separated origins (no trailing slash)
# Examples: http://192.168.1.50:3001, http://kaffebar.local:3001
ALLOWED_ORIGINS=http://localhost:5173

# Allow any origin on PORT (for local VM when accessing via IP/hostname)
# ALLOW_LOCAL_ORIGINS=true

# Demo mode (omit HA vars or set true for mock data)
# DEMO_MODE=true
